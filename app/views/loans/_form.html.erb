<div class="card">
  <div class="card-header">
    Credit Card Application Form
  </div>
  <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
            <%#= form_for :loan, class: "signupForm" do |f| %>
          <%= form_for(@loan) do |f| %>         
            <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
              <%= f.text_field :email, class: "form-control" %> <br />
            </div>
            <div class="form-group">
            <label for="exampleFormControlInput1">Pan Number</label>
              <%= f.text_field :pan_card, class: "form-control" %> <br />
            </div>
            <div class="form-group">
            <label for="exampleFormControlInput1">Aadhar Number</label>
              <%= f.text_field :aadhar_number, class: "form-control" %> <br />
            </div>
            <div class="form-group">
            <label for="exampleFormControlInput1">Bank Account Number</label>
              <%= f.text_field :bank_account_number, class: "form-control" %> <br />
            </div>
            <div class="form-group">
            <label for="exampleFormControlInput1">Bank Account IFSC</label>
              <%= f.text_field :bank_ifsc, class: "form-control" %> <br />
            </div>
            <div class="form-group">
            <label for="exampleFormControlInput1">Monthly Recurring Inflow</label>
              <%= f.text_field :monthly_recurring_inflow, class: "form-control" %> <br />
            </div>
            <div class="form-group">
            <label for="exampleFormControlInput1">Monthly Recurring Outflow</label>
              <%= f.text_field :monthly_recurring_outflow, class: "form-control" %> <br />
            </div>
              <%= f.submit "Submit Loan Application", class: "button createAccount" %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
